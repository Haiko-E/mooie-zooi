---
import { urlForImage } from '../utils/sanity';
const { node } = Astro.props;
---

<!-- Section: Design Block -->
<section id='over'>
  <div
    class='block p-8 bg-brocant-300 text-amber-950 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-700'
  >
    <div class='flex flex-wrap'>
      <div class='w-full shrink-0 grow-0 basis-auto lg:flex lg:w-6/12 xl:w-6/12'>
        <img
          src={urlForImage(node.image).format('webp').height(400).url()}
          alt={node.title}
          class='h-[400px] w-full object-cover lg:w-full lg:h-auto'
        />
      </div>
      <div class='w-full shrink-0 grow-0 basis-auto lg:w-6/12 xl:w-6/12'>
        <div class='py-6 lg:px-12 md:py-12'>
          <h2 class='mb-4 text-6xl font-bold'>
            {node.title}
            <br />
            <span class='text-2xl'>{node.subTitle}</span>
          </h2>

          <p class='mb-6 dark:text-neutral-300'>
            {node.description}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
